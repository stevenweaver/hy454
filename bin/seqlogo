#!/usr/bin/env python3.2

from __future__ import division, print_function

import sys

from os import getcwd
from os.path import exists, join

from Bio import AlignIO

from hy454 import graph_logo


def main(argv=None):
    if argv is None:
        argv = sys.argv[1:]

    if len(argv) != 3 or not exists(argv[0]):
        print('usage: seqlogo MSAFILE COLSPEC OUTPUTFILE', file=sys.stderr)
        sys.exit(-1)

    try:
        colspec = argv[1]
        if ':' in colspec:
            xyz = [int(v) for v in colspec.split(':')]
            xyz[1] += 1
            if len(xyz) in (2, 3):
                colspec = range(*xyz)
            else:
                raise ValueError()
        elif ',' in colspec:
            colspec = [int(v) for v in colspec.split(',')]
        else:
            colspec = [int(colspec)]
    except:
        print('usage: seqlogo MSAFILE COLSPEC OUTPUTFILE', file=sys.stderr)
        print('COLSPEC must be either a comma-delimited list of 1-indices or a colon-delimited range specification start:stop[:skip]', file=sys.stderr)
        sys.exit(-1)

    filename = join(getcwd(), argv[2])

    with open(argv[0]) as fh:
        msa = AlignIO.read(fh, 'fasta')

    graph_logo(msa, colspec, filename, 'pdf')

    return 0


if __name__ == '__main__':
    sys.exit(main())
